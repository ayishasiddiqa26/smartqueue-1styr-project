rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is student
    function isStudent() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Secure print jobs rules
    match /printJobs/{jobId} {
      // Only authenticated students can create jobs
      allow create: if isStudent() && 
                       request.auth.uid == resource.data.studentId;
      
      // Students can only read their own jobs, admins can read all
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.studentId || isAdmin());
      
      // Only admins can update job status and add comments
      // Students can only update requiresStudentAction flag
      allow update: if isAdmin() || 
                       (isStudent() && 
                        request.auth.uid == resource.data.studentId &&
                        request.writeFields.hasOnly(['requiresStudentAction', 'updatedAt']));
      
      // Only admins can delete jobs
      allow delete: if isAdmin();
    }
  }
}